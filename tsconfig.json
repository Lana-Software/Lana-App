{
	"compilerOptions": {
		"lib": [
			"es5",
			"es6",
      "DOM"
		],
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./build",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true
	},
	"include": [
		"./client/src/**/*",
		"./server/**/*"
	],
	"exclude": [
		"node_modules"
	]
}