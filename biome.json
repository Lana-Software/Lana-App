{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"include": ["**/*.ts", "**/*.js", "**/*.vue"],
		"ignore": ["client/dist"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineEnding": "crlf"
	},
	"linter": {
		"enabled": true
	},
	"organizeImports": {
		"enabled": true
	}
}
