{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"files": {
		"include": ["**/*.ts", "**/*.js", "**/*.vue"],
		"ignore": ["client/dist"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4
	},
	"linter": {
		"enabled": true
	},
	"organizeImports": {
		"enabled": true
	}
}
